{
  "manifest_version": 2,
  "name": "Tabalot",
  "version": "1.4.0",
  "description": "Limit the maximum number of open tabs",
  "permissions": [
    "tabs"
  ],
  "icons": {
     "128": "icon-128.png",
     "16": "icon-16.png",
     "48": "icon-48.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
       "19": "icon-19.png",
       "38": "icon-38.png"
    },
    "default_title": "Tabalot",
    "default_popup": "options.html"
  }
}
